<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="silva.shared.Employee" table="employees">
        <meta attribute="class-description">
            Add your class description here.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="username" type="string">
            <column name="username" length="255" not-null="false"/>
        </property>
        <property name="password" type="string">
            <column name="password" not-null="false"/>
        </property>
         <property name="name" type="string">
            <column name="fullname" not-null="false"/>
        </property>
        <property name="salary" type="int">
            <column name="salary" not-null="false"/>
        </property>
         <property name="designation" type="string">
            <column name="designation" not-null="false"/>
        </property>
    </class>
</hibernate-mapping>